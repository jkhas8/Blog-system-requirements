  <div class="container">
    <%= link_to "Logo", '#', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Trang chủ", root_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Tài khoản <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Thông tin tài khoản", current_user %></li>
            <li><%= link_to "Cài đặt", '#' %></li>
            <li class="divider"></li>
            <li>
              <%= link_to "Đăng xuất", logout_path, method: "delete" %>
