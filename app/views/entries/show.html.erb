<% provide(:title, @entry.title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if logged_in? %>
        <%= render 'shared/user_info' %>
      <% end %>
    </section>
    <section class="micropost_form">
      <% if logged_in? && !current_user.following.find_by(id: @user.id).nil? %>
        <%= render 'shared/comment_form' %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render @entry %>
    <ol class="comments">
      <%= render @comments %>
    </ol>
    <%= will_paginate @comments %>
  </div>
</div>
